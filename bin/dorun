#!/bin/bash


#
# DORUN:
#	Run a container
#	In case of current folder contains a Dockerfile assume folder name as image name
#

if [ -e ./Dockerfile ] ; then
	vImage=$( basename $PWD)
	echo "Current image id $vImage"
else
	vImage=$1
	shift
fi 

echo "running a new container from ${vImage}"
docker run -d -P $vImage $*
